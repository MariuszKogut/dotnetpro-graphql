{
  "name": "customer-app",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@microsoft/applicationinsights-web": "^2.5.3",
    "bootstrap": "^4.4.1",
    "classnames": "^2.2.6",
    "cross-env": "^7.0.2",
    "react": "^16.13.1",
    "react-bootstrap": "^1.0.0",
    "react-dom": "^16.13.1",
    "react-router-dom": "^5.1.2",
    "react-scripts": "3.4.1",
    "react-use": "^14.0.0",
    "typescript": "3.8.3"
  },
  "devDependencies": {
    "@types/classnames": "^2.2.10",
    "@types/jest": "25.2.1",
    "@types/node": "13.11.0",
    "@types/react": "16.9.32",
    "@types/react-dom": "16.9.6",
    "@types/react-router-dom": "^5.1.3",
    "concurrently": "^5.1.0",
    "nswag": "^13.3.0",
    "prettier": "^2.0.2"
  },
  "scripts": {
    "start": "react-scripts start",
    "start:customer-backend": "cd ../backend/HS.CustomerApp.CustomerHost && dotnet run",
    "start:all": "concurrently \"npm run start\" \"npm run start:customer-backend\"",
    "build": "react-scripts build",
    "build:strict": "cross-env ci=true react-scripts build",
    "generate:client": "nswag run ../backend/openapi.nswag /runtime:NetCore30",
    "prettify": "prettier --write \"./src/**/*.*(ts|tsx|json|js|html|css|scss)\"",
    "test": "react-scripts test",
    "eject": "react-scripts eject"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
