{
  "name": "customer-app",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@microsoft/applicationinsights-web": "^2.5.9",
    "bootstrap": "^4.5.2",
    "classnames": "^2.2.6",
    "react": "^16.13.1",
    "react-bootstrap": "^1.3.0",
    "react-dom": "^16.13.1",
    "react-router-dom": "^5.2.0",
    "react-scripts": "3.4.3",
    "react-use": "^15.3.4",
    "typescript": "4.0.3"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.11.4",
    "@testing-library/react": "^11.0.4",
    "@sheerun/mutationobserver-shim": "^0.3.3",
    "@types/classnames": "^2.2.10",
    "@types/jest": "26.0.14",
    "@types/node": "14.11.8",
    "@types/react": "16.9.51",
    "@types/react-dom": "16.9.8",
    "@types/react-router-dom": "^5.1.6",
    "cross-env": "^7.0.2",
    "concurrently": "^5.3.0",
    "nswag": "^13.8.2",
    "prettier": "^2.1.2"
  },
  "scripts": {
    "start": "react-scripts start",
    "start:customer-backend": "cd ../backend/HS.CustomerApp.CustomerHost && dotnet run",
    "start:all": "concurrently \"npm run start\" \"npm run start:customer-backend\"",
    "build": "react-scripts build",
    "build:strict": "cross-env ci=true react-scripts build",
    "prettify": "prettier --write \"./src/**/*.*(ts|tsx|json|js|html|css|scss)\"",
    "test": "cross-env ci=true react-scripts test --coverage",
    "test:update-snapshots": "cross-env ci=true react-scripts test -u",
    "eject": "react-scripts eject"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "jest": {
    "coveragePathIgnorePatterns": [
      "/src/shared/services/customer-client.ts",
      "/src/service-worker.ts"
    ]
  }
}
